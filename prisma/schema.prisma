generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admins")
}

model Profile {
  id          Int      @id @default(autoincrement())
  username    String?  @db.Text
  avatar      String?
  banner      String?
  bio         String?  @db.Text
  discordId   String?  @map("discord_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("profile")
}

model SocialLink {
  id        Int      @id @default(autoincrement())
  platform  String
  icon      String
  url       String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("social_links")
}

model CustomLink {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("custom_links")
}

model MusicPlayer {
  id        Int      @id @default(autoincrement())
  trackName String
  artistName String
  albumName String
  albumArt  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("music_player")
}

model UniqueView {
  id        Int      @id @default(autoincrement())
  ipAddress String   @map("ip_address")
  userId    String   @unique @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("unique_views")
}

model TotalView {
  id        Int      @id @default(autoincrement())
  ipAddress String   @map("ip_address")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("total_views")
}

